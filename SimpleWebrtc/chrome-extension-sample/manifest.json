{
  "name": "Screensharing Sample",
  "description": "Screensharing utility sample for getscreenmedia",
  "version": "0.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "icons": {
  },
  "permissions": [
    "desktopCapture"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [ {
    "js": [ "content.js" ],
    "matches": [ "https://localhost:3000/*", "https://localhost:8000/*", "http://localhost:8000/*","https://localhost/*" ]
  }],
  "externally_connectable": {
      "matches": [
          "https://localhost:3000/*",
          "https://localhost:8000/*",
          "http://localhost:8000/*",
          "https://localhost/*"
      ]
  }
}
